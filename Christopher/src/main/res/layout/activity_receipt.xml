<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.albarillo.Receipt"
    tools:layout_editor_absoluteY="81dp"
    android:background="@color/Black"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/title1"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:fontFamily="cursive"
        android:text="@string/receipt_name"
        android:textAlignment="center"
        android:textColor="@color/DarkOrange"
        android:textSize="40sp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/listValue"
        android:layout_marginBottom="27dp" />

    <TextView
        android:id="@+id/totalName"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginBottom="202dp"
        android:layout_marginStart="9dp"
        android:text="@string/total"
        android:textAlignment="textEnd"
        android:textColor="@color/DarkOrange"
        app:layout_constraintBottom_toTopOf="@+id/mainButton1"
        app:layout_constraintLeft_toLeftOf="@+id/listName"
        app:layout_constraintRight_toLeftOf="@+id/totalValue"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/listValue"
        android:layout_width="0dp"
        android:layout_height="94dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="151dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/DarkOrange"
        app:layout_constraintHorizontal_bias="0.361"
        app:layout_constraintLeft_toLeftOf="@+id/totalValue"
        app:layout_constraintRight_toRightOf="@+id/totalValue"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/listName"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/DarkOrange"
        app:layout_constraintBottom_toTopOf="@+id/totalValue"
        app:layout_constraintRight_toLeftOf="@+id/totalValue"
        app:layout_constraintTop_toTopOf="@+id/listValue"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/mainButton1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@color/DarkOrange"
        android:text="@string/main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.498" />

    <TextView
        android:id="@+id/credentials1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/DarkOrange"
        app:layout_constraintBottom_toTopOf="@+id/credit1"
        app:layout_constraintLeft_toLeftOf="@+id/credit1"
        app:layout_constraintRight_toRightOf="@+id/credit1"
        app:layout_constraintTop_toBottomOf="@+id/nameAndAdress"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.571"
        android:layout_marginTop="9dp" />

    <TextView
        android:id="@+id/credit1"
        android:layout_width="184dp"
        android:layout_height="60dp"
        android:text=""
        android:textColor="@color/DarkOrange"
        android:textAlignment="center"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/mainButton1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.497" />

    <TextView
        android:id="@+id/totalValue"
        android:layout_width="180dp"
        android:layout_height="31dp"
        android:layout_marginEnd="29dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/DarkOrange"
        app:layout_constraintBaseline_toBaselineOf="@+id/totalName"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/nameAndAdress"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:text="@string/name_address"
        android:textColor="@color/DarkOrange"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toRightOf="@+id/credentials1"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/listName"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/credentials1" />

    <TextView
        android:id="@+id/randomNum1"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:text="@string/receipt_name"
        android:textColor="@color/DarkOrange"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintRight_toRightOf="@+id/totalValue"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/listValue"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/totalValue" />


</android.support.constraint.ConstraintLayout>
